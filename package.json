{
  "name": "flexwise-monorepo",
  "version": "1.0.0",
  "description": "Flexwise school management system - React + Supabase monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "npm run dev --workspace=@flexwise/web-app",
    "dev:react": "npm run dev --workspace=@flexwise/web-app",
    "build": "npm ci --if-present || npm install && npm run build --workspace=@flexwise/web-app",
    "build:shared": "npm run build --workspace=@flexwise/shared",
    "build:react": "npm run build --workspace=@flexwise/web-app",
    "preview": "npm run preview --workspace=@flexwise/web-app",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "supabase:types": "npx supabase gen types typescript --project-id YOUR_PROJECT_ID --schema public > packages/shared/supabase-types.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "npm-run-all": "^4.1.5",
    "react": "^19.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/flexwise-monorepo.git"
  },
  "keywords": [
    "school-management",
    "react",
    "supabase",
    "typescript",
    "monorepo"
  ],
  "author": "Flexwise Team",
  "license": "MIT"
}