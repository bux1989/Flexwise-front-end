{
  "name": "@flexwise/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for Flexwise applications",
  "type": "module",
  "main": "./lib/index.ts",
  "types": "./lib/index.ts",
  "exports": {
    ".": {
      "import": "./lib/index.ts",
      "types": "./lib/index.ts"
    },
    "./supabase": {
      "import": "./lib/supabaseClient.ts",
      "types": "./lib/supabaseClient.ts"
    },
    "./utils": {
      "import": "./utils/index.ts",
      "types": "./utils/index.ts"
    },
    "./types": {
      "import": "./supabase-types.ts",
      "types": "./supabase-types.ts"
    },
    "./domains/academic": {
      "import": "./domains/academic/index.ts",
      "types": "./domains/academic/index.ts"
    },
    "./domains/attendance": {
      "import": "./domains/attendance/index.ts",
      "types": "./domains/attendance/index.ts"
    },
    "./domains/scheduling": {
      "import": "./domains/scheduling/index.ts",
      "types": "./domains/scheduling/index.ts"
    },
    "./domains/management": {
      "import": "./domains/management/index.ts",
      "types": "./domains/management/index.ts"
    }
  },
  "files": [
    "lib",
    "utils",
    "domains",
    "supabase-types.ts"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  }
}